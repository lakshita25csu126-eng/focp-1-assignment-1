#include <stdio.h>
int main() {
    int t;
    scanf("%d", &t);
    while (t--) {
        int green, purple;
        scanf("%d %d", &green, &purple);
        int n;
        scanf("%d", &n);
        int countP1 = 0, countP2 = 0;
        while (n--) {
            int x, y;
            scanf("%d %d", &x, &y);
            if (x == 1) countP1++;
            if (y == 1) countP2++;
        }
        long cost1 = (long)countP1 * green + (long)countP2 * purple;
        long cost2 = (long)countP1 * purple + (long)countP2 * green;
        if (cost1 < cost2)
            printf("%ld\n", cost1);
        else
            printf("%ld\n", cost2);
    }

    return 0;
}
